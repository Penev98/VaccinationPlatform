
@{
    this.ViewData["Title"] = "Active Bookings";
}

@model IEnumerable<ShowBookingViewModel>

<h1 class="locations">@this.ViewData["Title"]</h1>

<div class="row">
    <div id="myTable" class="col-md-6">
        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>Status</th>
                    <th>Id</th>
                    <th>District</th>
                    <th>Town</th>
                    <th>Hospital</th>
                    <th>Disease</th>
                    <th>Vaccine</th>
                    <th>Date</th>
                    <th>Cancel</th>
                    <th>Edit</th>
                    <th>Remove</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in this.Model)
                {
                <tr>

                    @if (booking.IsDeleted)
                    {
                        <td><i class="fas fa-ban fa-2x text-danger"></i></td>
                    }
                    else
                    {
                        <td><i class="fas fa-check-circle fa-2x text-success"></i></td>
                    }

                    <td id="bookingId">@booking.Id</td>
                    <td>@booking.DistrictName</td>
                    <td>@booking.TownName</td>
                    <td>@booking.HospitalName</td>
                    <td>@booking.DiseaseName</td>
                    <td>@booking.VaccineName</td>
                    <td>@booking.BookingDate.Date</td>
                    <td><a asp-controller="Booking" asp-action="CancelBooking" asp-route-id="@booking.Id"><i class="fas fa-window-close fa-2x"></i></a></td>
                    <td><a><i class="fas fa-edit fa-2x"></i></a></td>
                    <td class="text-center"><a><i class="fas fa-trash-alt fa-2x"></i></a></td>
                </tr>
                }

            </tbody>
        </table>
    </div>
</div>

