
@{
    this.ViewData["Title"] = "Active Bookings";
}

@model IEnumerable<ShowBookingViewModel>

<h1 class="locations">@this.ViewData["Title"]</h1>

<div class="row">
    <div id="myTable" class="col-md-6">
        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>District</th>
                    <th>Town</th>
                    <th>Hospital</th>
                    <th>Disease</th>
                    <th>Vaccine</th>
                    <th>Date</th>
                    <th>Cancel</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in this.Model)
                {
                <tr>
                    <td id="bookingId">@booking.Id</td>
                    <td>@booking.DistrictName</td>
                    <td>@booking.TownName</td>
                    <td>@booking.HospitalName</td>
                    <td>@booking.DiseaseName</td>
                    <td>@booking.VaccineName</td>
                    <td>@booking.BookingDate.Date</td>
                    <td><a><button class="btn btn-link" asp-controller="Booking" asp-action="CancelBooking" asp-route-id="@booking.Id"><i class="fas fa-window-close fa-2x"></i></button></a></td>
                    <td><button class="btn btn-link"><i class="fas fa-edit fa-2x"></i></button></td>
                </tr>
                }

            </tbody>
        </table>
    </div>
</div>

