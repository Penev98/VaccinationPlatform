@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<link rel="stylesheet" href="~/css/main.css" />
<link rel="stylesheet" href="~/css/util.css" />

<h1 class="locations moveLeft">@ViewData["Title"]</h1>

<div class="row moveLeft down">
    <div class="col-md-4">
        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="flex-sb flex-w">

            <button type="submit" name="provider" value="Facebook" class="btn-face m-b-20">
                <i class="fa fa-facebook-official"></i>
                Facebook
            </button>

            <button type="submit" name="provider" value="Google" class="btn-google m-b-20">
                <img src="~/images/icons/icon-google.png" alt="GOOGLE">
                Google
            </button>
        </form>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4 class="locations">Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="locations" asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="locations" asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="locations" asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
