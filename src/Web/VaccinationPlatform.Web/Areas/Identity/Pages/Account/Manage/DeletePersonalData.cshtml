@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>
<div class="row" style="margin-left:0px">
    <div class="alert alert-warning col-md-6" role="alert" style="width:614px">
        <p>
            <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </p>
    </div>
</div>

<div class="row">
    <form id="delete-user" method="post" class="form-group col-md-6">
        <div asp-validation-summary="All" class="text-danger"></div>

        @if (Model.RequirePassword)
        {
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <div class="input-group">
                    <div class="input-group-addon">
                        <span><i class="fas fa-lock"></i></span>
                    </div>
                    <input asp-for="Input.Password" class="form-control" />
                </div>

                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="btn btn-danger" type="button"  data-toggle="modal" data-target="#myModal">Delete data and close my account</button>
        <partial name="_ModalPartial" />
    </form>
</div>

